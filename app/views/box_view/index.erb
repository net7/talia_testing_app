<!DOCTYPE html PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN"
  "http://www.w3.org/TR/html4/loose.dtd">

<html>
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <title><%= page_title %>: <%= @small_title %> </title>

    <%= stylesheet_link_tag 'boxView/frontend.css' %>
    <%= stylesheet_link_tag 'boxView/style.css' %>
    <%= stylesheet_link_tag 'boxView/ez.css' %>
    <%= stylesheet_link_tag 'boxView/jquery-ui-1.7.2.custom.css' %>

    <%= javascript_include_tag 'swfobject' %>
    <%= javascript_include_tag 'jquery-1.4.1.min' %>
    <%= javascript_include_tag 'jquery-ui-1.7.1.custom.min' %>
    <%= javascript_include_tag 'boxView/eztip.js' %>
    <%= javascript_include_tag 'boxView/jquery.anchorMan.js' %>
    <%= javascript_include_tag 'boxView/jquery.boxview.js' %>
    <%= javascript_include_tag 'boxView/frontend.js' %>
    <%= javascript_include_tag 'boxView/errors.js' %>
    <%= javascript_include_tag 'boxView/menu.js' %>
    <%= javascript_include_tag 'boxView/utilities.js' %>
    <%= javascript_include_tag 'boxView/prefs.js' %>
    <%= javascript_include_tag 'boxView/bookmarks.js' %>
    <%= javascript_include_tag 'boxView/ZeroClipboard.js' %>
    <%= javascript_include_tag 'boxView/jquery.base64.js' %>


    <%= render :partial => 'shared/swicky_ui_head' %>
  </head>
  <body>
	<div id="prefDialog" title="Preferenze">
		<form><fieldset>
			<label for="prefsAnimations">Animation effects</label>
			<input type="checkbox" id="prefsAnimations" class="text ui-widget-content ui-corner-all" CHECKED />
			<br />

			<label for="prefsImagesMaxWidth">Images maximum width</label>
			<select id="prefsImagesMaxWidth" class="text ui-widget-content ui-corner-all">
                <option value="200">200px</option>
                <option value="300">300px</option>
                <option value="400">400px</option>
                <option value="500">500px</option>
                <option value="600">600px</option>
                <option value="700">700px</option>
                <option value="800">800px</option>
                <option value="900">900px</option>
                <option value="1000">1000px</option>
                <option value="0">No limit</option>
            </select>
			<br />
			
			<label for="prefsUseCookie">Use a cookie to save your preferences</label>
			<input type="checkbox" id="prefsUseCookie" class="text ui-widget-content ui-corner-all" />
			<br />

		</fieldset></form>
	</div>

    <div id='bookmarkDialog'></div>
    <div id='notebookDialog'></div>
    <div id='signupDialog'></div>
	<div id='errorDialog'></div>
	<div id='messageDialog'></div>

    <div id='loadingDialog'>
      <%= image_tag "ajax_loader.gif" %>
      <p>Loading...</p>
    </div>

    <div id="pageExt">
      <div id="pageHeader">
        <h1><%= @title %></h1>
        <p><%= @small_title %></p>
        <div id="header_preferences_wrapper">
          <div id="header_preferences">
            <ul>
              <li><a class="eztip static_resource" href="/boxview/dispatch?method=getIntro" id="introButton" title="Home">Home</a></li>
              <!-- <li><a class="eztip" href="#" id="helpButton" title="Help">Help</a></li> -->
              <li><a class="eztip inactive" href="#" id="undoButton" title="Undo!">Undo!</a></li>
              <li class="last"><a class="eztip" href="#" id="prefButton" title="Preferences">Preferences</a></li>
            </ul>
          </div>
        </div>
      </div>
      <div id="menu_container"></div>
      <div id="pageContent"></div>
    </div>

  </body>

  <script type="text/javascript">

  function initialize() {
    var myLatlng = new google.maps.LatLng(-34.397, 150.644);
    var myOptions = {
      zoom: 8,
      center: myLatlng,
      mapTypeId: google.maps.MapTypeId.ROADMAP
    }
    var map = new google.maps.Map(document.getElementById("map_canvas"), myOptions);
  }

  // TODO: move this code somewhere else
  function fake_initialize() { }
  function loadScript() {
    var script = document.createElement("script");
    script.type = "text/javascript";
    script.src = "http://maps.google.com/maps/api/js?sensor=false&callback=fake_initialize";
    document.body.appendChild(script);
  }

    loadScript();

// TODO: remove the #map_canvas element from the down there 
   </script>

</html>
