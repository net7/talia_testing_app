<% images = @source.files_of_type TaliaCore::DataTypes::IipData, TaliaCore::DataTypes::ImageData %>
<% if images.count > 0 %>
    <%= render :partial => 'image', :locals => {:images => images}%>
<% end %>

<% prepare_data_records %>
<% if @data_records.size > 0 %>
    <%= render :partial => 'data_records', :locals => {:records => @data_records} %>
<% end %>

<% if @files['TaliaCore::DataTypes::XmlData'] || !@source[N::DCNS.description].empty? %>
    <%= render :partial => 'text' %>
<% end %>