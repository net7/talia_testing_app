
<% if !(coordinates = @source[N::DEMO.coordinates].first).nil? %>
  <h3 class="toggle">Map</h3>
  <div id="map">

  <%
    lat = coordinates.split(',').first
    lng = coordinates.split(',').last

  %>
    <script type="text/javascript" src="http://www.google.com/jsapi?key=<%= googlemap_key  %>" type="text/javascript">
    </script>

    <script type="text/javascript">

      google.load("maps", "2.x");

      $(document).ready(function(){

        var lat = '<%= lat %>';
        var lng = '<%= lng %>';

        var map = new GMap2(document.getElementById('map_canvas'));
        var location = new GLatLng(lat , lng);
        map.setCenter(location, 5);
        map.addControl(new GSmallMapControl());

        var point = new GLatLng(lat , lng);
        marker = new GMarker(point);
        map.addOverlay(marker);
      });
 
    </script>
    <div id="map_canvas" style="width: 500px; height: 300px"></div>

  </div>
<% end %>
